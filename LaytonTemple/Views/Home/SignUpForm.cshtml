}

<!-- REQUIREMENTS:
    Once the user has selected a time, they will fill out a form that has the time set
    (i.e. part of the form, but not editable), but also allows the user to enter their information:
        o Name of Group
        o Size of Group (Max of 15)
        o Email Address
        o Phone Number (Optional) 
-->

@model Tour 

<form method="post">

    <div asp-validation-summary="All"></div>

    <input type="hidden" asp-for="TimeId" value="@ViewBag.TimeId"/>

    <label asp-for="GroupName">Name of Group:</label>
    <input asp-for="GroupName" />

    <label asp-for="GroupSize">Size of Group:</label>
    <input asp-for="GroupSize" />

    <label asp-for="Email">Email Address:</label>
    <input asp-for="Email" />

    <label asp-for="Phone">Phone:</label>
    <input asp-for="Phone" />

    <button type="submit">Submit</button>

</form> 

